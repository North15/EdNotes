{
  "name": "ednotes-richtext-dev",
  "private": true,
  "type": "module",
  "scripts": {
  "test": "node -e \"require('fs').mkdirSync('artifacts/coverage/js',{recursive:true})\" && node --experimental-vm-modules node_modules/jest/bin/jest.js --config package.json --runInBand --coverage",
  "lint": "eslint src/EdNotes.RichText/wwwroot/editor/**/*.js",
  "lint:fix": "eslint src/EdNotes.RichText/wwwroot/editor/**/*.js --fix",
  "bench:normalize": "node scripts/bench-normalize.mjs 400",
  "coverage:check": "node scripts/coverage-threshold.mjs"
  },
  "jest-junit": {
    "outputDirectory": "artifacts/test-results/js",
    "outputName": "junit.xml"
  },
  "jest": {
    "reporters": ["default", ["jest-junit", { "suiteName": "js-tests" }]],
    "coverageDirectory": "artifacts/coverage/js",
  "collectCoverageFrom": ["src/EdNotes.RichText/wwwroot/editor/**/*.js"],
  "testMatch": ["**/tests/js/**/*.spec.mjs"]
  },
  "devDependencies": {
    "jest": "29.7.0",
    "jsdom": "26.1.0",
  "jest-junit": "16.0.0",
  "eslint": "8.57.0"
  }
}
